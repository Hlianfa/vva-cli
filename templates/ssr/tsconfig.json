{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"]
  },
  "baseUrl": "./",
  "paths": {
    "@": ["src"],
    "components": ["src/components"],
    "helper": ["src/helper"],
    "config": ["src/helper/config"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
